<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="/stylesheets/c3.css" rel="stylesheet" type="text/css">
    <script src="/javascripts/d3.min.js" charset="utf-8"></script>
    <script src="/javascripts/c3.min.js"></script>

  </head>
  <body>
    <h1><%= title %></h1>

 <HR>

  <p>Static bar chart</p>
    <div id="barchart"></div>

    <p>Dynamic Bar Chart</p>
    <div id="chart"></div>
    <!--chart 不放 c3_example.js的原因: 要動態展示-->
    <script type="text/javascript">

      var chart = c3.generate({
        data: {
          columns: [
            ['data1', 30, 200, 100, 400, 150, 250],
            ['data2', 130, 100, 140, 200, 150, 50]
          ],
          type: 'bar'
        },
        bar: {
          width: {
            ratio: 0.5 // this makes bar width 50% of length between ticks
          }
          // or
          //width: 100 // this makes bar width 100px
        }
      });

      setTimeout(function () {
        chart.load({
          columns: [
            ['data3', 130, -150, 200, 300, -200, 100]
          ]
        });
      }, 1000);

    </script>
    <script src="/javascripts/c3_example.js" type="text/javascript"></script>
  </body>
</html>
